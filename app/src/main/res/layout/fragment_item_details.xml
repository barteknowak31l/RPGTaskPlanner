<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_name_activity_item_details"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Excalibur" />

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/rpg_logo_sm"
        android:contentDescription="Zdjęcie przedmiotu"
        tools:src="@drawable/rpg_logo_sm"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/itemTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_type_activity_item_details"
        android:textSize="18sp"
        tools:text="Typ przedmiotu: Broń" />

    <TextView
        android:id="@+id/enhancedStatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enhanced_stat_activity_item_details"
        android:textSize="18sp"
        tools:text="Atak: +" />

    <TextView
        android:id="@+id/enhancementValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enhancement_value_activity_item_details"
        android:textSize="18sp"
        tools:text="Wartość ulepszenia: 10" />

    <TextView
        android:id="@+id/itemDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_description_header_activity_item_details"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        tools:text="Potężna broń legendarnej mocy, która zmienia losy bitew" />

    <Button
        android:id="@+id/equipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equip_button_activity_item_details"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
