<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageViewHelmet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewArmour"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_below="@id/imageViewHelmet"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewLeftHand"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_alignTop="@id/imageViewArmour"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_toStartOf="@id/imageViewArmour"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewRightHand"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_alignTop="@id/imageViewArmour"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_toEndOf="@id/imageViewArmour"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewBelt"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@id/imageViewArmour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewRing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/imageViewBelt"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_toStartOf="@id/imageViewBelt"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewArtifact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/imageViewBelt"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_toEndOf="@id/imageViewBelt"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />

    <ImageView
        android:id="@+id/imageViewBoots"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@id/imageViewBelt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_shape"
        android:src="@drawable/rpg_logo_sm" />


</RelativeLayout>