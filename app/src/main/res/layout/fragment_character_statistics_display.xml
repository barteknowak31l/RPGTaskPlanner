<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/rounded_shape"
        android:layout_marginHorizontal="10dp"

        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leftColumn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticLeft1"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticLeft2"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticLeft3"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticLeft4"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticLeft5"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightColumn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticRight1"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticRight2"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticRight3"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticRight4"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/statisticRight5"
                android:name="edu.put.rpgtaskplanner.character.character_statistics.StatisticListItemFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/levelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/current_level_activity_character"
        android:background="@color/button_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"

        android:gravity="center_horizontal"
        android:text="@string/current_exp_activity_character"
        android:background="@color/button_color"

        android:textSize="18sp" />

    <TextView
        android:id="@+id/nextLevelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"

        android:gravity="center_horizontal"
        android:text="@string/next_level_exp_activity_character"
        android:background="@color/button_color"

        android:textSize="18sp" />


    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="20dp"
        android:id="@+id/trophiesFragment"
        android:name="edu.put.rpgtaskplanner.character.character_statistics.TrophiesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

