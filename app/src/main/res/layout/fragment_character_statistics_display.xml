        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statisticRight3"
            android:name="edu.put.rpgtaskplanner.character_statistics.StatisticListItemFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statisticRight4"
            android:name="edu.put.rpgtaskplanner.character_statistics.StatisticListItemFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statisticRight5"
            android:name="edu.put.rpgtaskplanner.character_statistics.StatisticListItemFragment"/>


    </LinearLayout>

</LinearLayout>