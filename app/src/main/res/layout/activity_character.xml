<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventory_frag"
        android:name="edu.put.rpgtaskplanner.character.CharacterInventoryFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventory_frag"
        android:layout_marginVertical="30dp"
        android:id="@+id/statistics_frag"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@drawable/rounded_shape"
        android:name="edu.put.rpgtaskplanner.character.character_statistics.CharacterStatisticsDisplayFragment"/>





</RelativeLayout>